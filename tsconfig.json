{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "es2022"],
    "types": ["cypress", "@cypress/grep", "cypress-real-events", "@shelex/cypress-allure-plugin"],
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true
  },
  "include": ["cypress/**/*.ts", "cypress.config.ts", "*.ts", "index.d.ts"]
}
